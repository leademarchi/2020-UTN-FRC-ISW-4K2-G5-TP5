<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView android:layout_height="wrap_content" android:layout_width="match_parent">

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/layoutNombreNegocio"/>

    <TextView
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Provincia"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/quicksand_medium"/>

    <Spinner
        android:paddingStart="3dp"
        android:fontFamily="@font/quicksand_semibold"
        android:id="@+id/spinnerProvincia"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="8dp">
    </Spinner>

    <TextView
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Localidad"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/quicksand_medium"/>

    <Spinner
        android:paddingStart="3dp"
        android:id="@+id/spinnerLocalidad"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="8dp"
        android:fontFamily="@font/quicksand_semibold">
    </Spinner>

    <TextView
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Dirección"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/quicksand_medium"/>

    <EditText
        android:id="@+id/editTextCalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fontFamily="@font/quicksand_regular"
        android:hint="Calle"/>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal"
        android:layout_margin="8dp">


        <EditText
            android:inputType="number"
            android:layout_weight="1"
            android:id="@+id/editTextNro"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_regular"
            android:hint="Nro" />

        <EditText
            android:inputType="number"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:id="@+id/editTextPiso"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_regular"
            android:hint="Piso" />

        <EditText
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:id="@+id/editTextDepto"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_regular"
            android:hint="Depto" />

    </LinearLayout>

    <TextView
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Referencia (Opcional)"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/quicksand_regular"/>

    <EditText
        android:id="@+id/editTextReferencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fontFamily="@font/quicksand_regular"
        android:hint="Ingresar referencia"/>

</LinearLayout>

    </ScrollView>

    <Space android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent"/>

    <Button
        android:id="@+id/buttonConfirmarUbicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:paddingBottom="2dp"
        android:background="@drawable/background_button_default"
        android:fontFamily="@font/quicksand_bold"
        android:text="Confirmar dirección"
        android:textColor="@color/buttonDefaultTextColor"

        />
    <TextView
        android:id="@+id/buttonVolverAMapa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:background="@null"
        android:fontFamily="@font/quicksand_bold"
        android:text="VOLVER AL MAPA"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary" />
</LinearLayout>